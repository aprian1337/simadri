<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#f0f0f0"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="800dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_marginTop="-400dp"
                android:layout_width="1000dp"
                android:layout_height="770dp"
                android:src="@drawable/oval_dashboard" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="150dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_dehaze_black_24dp"
                    />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginLeft="-190dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:src="@drawable/simadri_landscape"
                    />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-250dp"
            android:background="@drawable/dashboard"
            android:paddingLeft="50dp"
            android:paddingRight="100dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/dashboardWelcome"
            android:textColor="#3d3d3d"
            android:textSize="18dp" />

        <LinearLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="35dp"
            android:layout_width="480dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/dashboard_gradient">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu Dashboard"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/riwayat"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/oval_kuning"
                    android:text="Riwayat Surat"
                    android:textAllCaps="false"
                    android:textColor="#FFFF" />

                <Button
                    android:id="@+id/benar"
                    android:layout_width="150dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/benar"
                    android:text="Cek Status Surat"
                    android:textAllCaps="false"
                    android:textColor="#FFFF" />
            </LinearLayout>

            <Button
                android:id="@+id/buatSurat"
                android:layout_width="300dp"
                android:layout_height="47dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/oval_button_putih"
                android:text=" Buat Surat Baru"
                android:textAlignment="viewStart"
                android:drawableLeft="@drawable/ic_note_add2_black_24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="85dp"
                android:textAllCaps="false"
                android:textColor="#000"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="165dp"
            android:layout_gravity="center"
            android:layout_height="15dp"
            android:layout_marginTop="40dp"
            android:text="Alright reserved SIMADRI"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="#707070"
            android:textSize="10dp" />


    </LinearLayout>
</ScrollView>